<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--头部标题-->
    <include layout="@layout/tab_minetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/whiteline"/>

    <!--主要信息-->
    <include layout="@layout/tab_message"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

    <include layout="@layout/whiteline"/>

    <!--关注,粉丝-->
    <include layout="@layout/tab_followandfens"
        android:layout_width="match_parent"
        android:layout_weight="1.5"
        android:layout_height="0dp"/>

    <include layout="@layout/whiteline"/>

    <!--我的收益-->
    <include layout="@layout/tab_money"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <include layout="@layout/whiteline"/>

    <!--我的等级-->
    <include layout="@layout/tab_level"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <include layout="@layout/whiteline"/>

    <!--我的钻石币-->
    <include layout="@layout/tab_diamonds"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <include layout="@layout/whiteline"/>

    <!--我的礼物-->
    <include layout="@layout/tab_gift"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <include layout="@layout/whiteline"/>

    <!--邀请好友-->
    <include layout="@layout/tab_invite"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <include layout="@layout/whiteline"/>

    <!--推广码-->
    <include layout="@layout/tab_qrcode"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <include layout="@layout/whiteline"/>

    <!--设置-->
    <include layout="@layout/tab_setting"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>

    <include layout="@layout/whiteline"/>

</LinearLayout>